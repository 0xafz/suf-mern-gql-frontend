{
  "name": "suf-frontend",
  "version": "1.0.0",
  "description": "Fullstack [Stack Overflow](https://stackoverflow.com/) clone (QnA site) made with MERN + GraphQL",
  "private": "true",
  "scripts": {
    "format": "prettier --write \"**/*.{js,jsx,json,md,ts,tsx}\"",
    "web": "pnpm -F ./packages/web --"
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "8.2.2",
    "husky": "^5.1.3",
    "prettier": "^2.2.1",
    "typescript": "^4.6.4"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts,jsx,tsx}": [
      "eslint --cache --fix"
    ],
    "*.{js,ts,jsx,tsx,json,md}": [
      "prettier --write"
    ]
  }
}
