{
  "name": "suf",
  "version": "1.0.0",
  "description": "Fullstack [Stack Overflow](https://stackoverflow.com/) clone (QnA site) made with MERN + GraphQL",
  "private": "true",
  "scripts": {
    "format": "prettier --write \"**/*.{js,jsx,json,md,ts,tsx}\"",
    "app": "pnpm -F ./packages/app --",
    "server": "pnpm -F ./packages/server --"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/afroz1198/stack-underflow-mern-gql.git"
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/afroz1198/stack-underflow-mern-gql/issues"
  },
  "homepage": "https://github.com/afroz1198/stack-underflow-mern-gql#readme",
  "devDependencies": {
    "concurrently": "^6.0.0",
    "husky": "7.0.4",
    "prettier": "^2.2.1",
    "typescript": "^4.6.4"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts,jsx,tsx}": [
      "eslint --cache --fix"
    ],
    "*.{js,ts,jsx,tsx,json,md}": [
      "prettier --write"
    ]
  }
}
